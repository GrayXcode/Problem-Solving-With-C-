// @Author :Mohamed Ibrahim

#include<bits/stdc++.h>
using namespace std;
 int main()
{
 int n;
 cin>>n;
  int l=1,r=n;
  int x = n+1;
  x = x/2;
for(int i =1;i<=n;i++){
 	for(int j =1;j<=n;j++){
 		if(x==i && x==j){
 			cout<<"X";	
		}
	 	else if(j==l){
	 		cout<<"\\";
		}
		 else if(j==r){
		 	cout<<'/';
		 }
		 else {
		 	cout<<"*";	
		 }
	 }
	 	cout<<endl;
	 	l++;
		r--;
 	
}

}
